form
    display none

    margin-top 3em

    label
    button
        display block
        margin 1em 0

    span
        display block

    input
        box-sizing border-box
        width 100%

    button
        margin-top 2em
        padding .65em 1em
        border none
        background-color link-color
        color #fff
        font-weight bold

        transition background 250ms

        &:hover
        &:focus
            background-color link-color - 30%
